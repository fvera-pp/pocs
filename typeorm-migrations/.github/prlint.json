{
  "title": [
    {
      "pattern": "^\\[[A-Z]{1,}-\\d{1,5}\\]:\\s",
      "message": "Your title needs to be prefixed with a JIRA ticket"
    }
  ],
  "body": [
    {
      "pattern": "\\[[A-Z]{1,}-\\d{1,5}\\]",
      "flags": ["i"],
      "message": "You need a JIRA ticket in your description"
    }
  ],
  "head.ref": [
    {
      "pattern": "^(build|ci|chore|revert|docs|feature|bugfix|perf|refactor|style|test)/|\\d+\\.(?:\\d+|x)(?:\\.x)?$",
      "message": "Your branch name is invalid"
    }
  ],
  "assignee.login": [
    {
      "pattern": ".+",
      "message": "You need to assign someone"
    }
  ]
}
